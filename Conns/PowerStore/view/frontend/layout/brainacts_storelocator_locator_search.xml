<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Store Locator</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Store Locator</item>
                    <item name="label" xsi:type="string">Store Locator</item>
                    <item name="link" xsi:type="string">./</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Search</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Search</item>
                    <item name="label" xsi:type="string">Search</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceBlock name="locator.search.container" remove="true"/>
        <referenceContainer name="content">
            <block class="BrainActs\StoreLocator\Block\Search" name="powerstore.locator.search.container" template="Conns_PowerStore::search/container.phtml" cacheable="false">
                <block class="BrainActs\StoreLocator\Block\Search\Filter" name="locator.search.filter"  template="Conns_PowerStore::search/filter.phtml" cacheable="false"/>
                <block class="BrainActs\StoreLocator\Block\Search\Map" name="locator.search.map" ifconfig="brainacts_storelocator/search/allow_map" template="BrainActs_StoreLocator::search/map.phtml" cacheable="false"/>
                <block class="Conns\PowerStore\Block\Search\Result" name="locator.search.result" cacheable="false"/>
            </block>
        </referenceContainer>
    </body>
</page>
