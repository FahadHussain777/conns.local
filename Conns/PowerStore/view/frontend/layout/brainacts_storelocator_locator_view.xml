<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="root">
        <block class="Magento\Framework\View\Element\Template" template="PowerReviews_ReviewDisplay::afterbody.phtml" before="-" />
    </referenceContainer>
    <referenceBlock name="storelocator_view" remove="true"/>
    <referenceBlock name="content">
        <block class="Conns\PowerStore\Block\View" name="conns_storelocator_view_title" template="Conns_PowerStore::pagetitle.phtml"/>
        <block class="Conns\PowerStore\Block\View" name="conns_storelocator_view_left" template="Conns_PowerStore::storeinfo.phtml">
            <block class="PowerReviews\ReviewDisplay\Block\Catalog\Product\ReviewDisplay" name="review-rating" template="Conns_PowerStore::starrating.phtml" />
        </block>
        <block class="Conns\PowerStore\Block\View" name="conns_storelocator_view_info" template="Conns_PowerStore::map.phtml" cacheable="false" >
            <block class="PowerReviews\ReviewDisplay\Block\Catalog\Product\ReviewDisplay" name="review-container" template="Conns_PowerStore::reviewcontainer.phtml" />
        </block>
        <block class="Conns\PowerStore\Block\View" name="conns_storelocator_view_right" template="Conns_PowerStore::yesmoney.phtml"/>
    </referenceBlock>
</page>