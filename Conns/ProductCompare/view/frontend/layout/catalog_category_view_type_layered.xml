<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="catalog.compare.sidebar" destination="category.product.list.additional" before="-"/>
        <referenceContainer name="sidebar.additional">
            <referenceBlock name="catalog.compare.sidebar" remove="true"/>
            <block class="Magento\Framework\View\Element\Template" name="conns.catalog.compare.sidebar"
                   template="Conns_ProductCompare::product/compare/sidebar.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="compareProducts" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Catalog/js/view/compare-products</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>